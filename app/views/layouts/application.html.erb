<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <script src="//maps.googleapis.com/maps/api/js?v=3.exp&libraries=geometry,visualization&key=AIzaSyCPiFQDQXqTsLtrJoYkRgOCqxVnfYNl0zo"></script>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body ng-app="graffitiApp">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div ng-hide="loading" ng-include="'nav/_nav.html'" ng-controller="NavCtrl"></div>
    <div class=“container”>
      <div class="row">
        <div class="col-sm-12">
          <!--use nav controller model to show/display title -->
          <div ng-hide="loading" ng-include="'nav/_title.html'" ng-controller="NavCtrl"></div>
          <div class="row">
            <div class="map-container col-md-7 col-md-push-5">
              <div id="map-canvas"></div>
            </div>
            <div class="list-container col-md-5 col-md-pull-7">
              <ui-view></ui-view>
            </div>

          </div>
        </div>
      </div>
    </div>
  </body>
</html>
